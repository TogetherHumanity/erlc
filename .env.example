# Example environment configuration for the ERLC Discord Bot

# Discord bot token generated in the Discord Developer Portal
DISCORD_TOKEN=

# API key for your ER:LC private server.  Keep this secret!
ERLC_SERVER_KEY=

# Numeric ID of your ER:LC private server
ERLC_SERVER_ID=

# Discord server (guild) ID where the bot will operate
DISCORD_GUILD_ID=

# JSON mapping of Discord role names to ER:LC team names
# Example: {"Police Officer": "police", "Sheriff Deputy": "sheriff"}
ROLE_TEAM_MAP=

# (Optional) Roblox group ID if you want to display group roles when linking accounts
ROBLOX_GROUP_ID=

# Discord channel IDs for log outputs and moderation notifications
JOIN_LOG_CHANNEL_ID=
LEAVE_LOG_CHANNEL_ID=
KILL_LOG_CHANNEL_ID=
MOD_LOG_CHANNEL_ID=
